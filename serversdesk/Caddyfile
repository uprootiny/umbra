# Pali Reader - catches any hostname on port 9999
:9999 {
    root * /home/uprootiny/Shevat/suttas
    file_server
    encode gzip zstd

    header {
        Access-Control-Allow-Origin *
        X-Content-Type-Options nosniff
    }

    try_files {path} /index.html
}
